<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    @RenderSection("Meta", required: false)
    <link rel="icon" href="/favicon.ico">
    <title>@ViewBag.Title - Interview</title>
    <!-- CSS -->
    <link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400" />
    <link type="text/css" rel="stylesheet" href="/Styles/font-awesome.min.css" />
    <link type="text/css" rel="stylesheet" href="/Styles/bootstrap.min.css" />

    @RenderSection("Styles", required: false)
    @Styles.Render("~/Styles/Site")
    <!-- JS -->
    <script type="text/javascript" src="/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript" src="/Scripts/jquery-1.10.2.min.js"></script>
    @RenderSection("Head", required: false)
</head>
<body class="@ViewBag.BodyClass">
  
        <div class="topnav clearfix">
            <div class="container">

                <div class="logo">
                    <a href="/">
                        <img src="/Images/logo.png" alt="" />
                    </a>
                </div>
                <ul>
                    <li class="text">
                       
                    </li>
                </ul>

            </div>
        </div>
    }

    @if (ViewBag.ShowMenu == false)
    {
        <div class="main">
            <div class="container">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        <div class="main">
            <div class="container">
                <div class="sidenav">
                    <ul>
                        <li>
                            <div style="color: red; line-height: 1.3">Please make sure that you read the instructions in the Instructions link first before you start. <br /> <br /></div>
                        </li>
                        <li>
                            <a href="/Interview/Index?showInstructions=true" class="@(TempData["NAV"] != null && TempData["NAV"].ToString() == "INDEX" ? "selected" : "")">
                                Instructions
                            </a>
                        </li>
                        <li>
                            <a href="/interview/savedata" class="@(TempData["NAV"] != null && TempData["NAV"].ToString() == "DATA" ? "selected" : "")">
                                Data Post Issue
                            </a>
                        </li>
                        <li>
                            <a href="/interview/Sql" class="@(TempData["NAV"] != null && TempData["NAV"].ToString() == "SQL" ? "selected" : "")">
                                SQL
                            </a>
                        </li>

                        <li>
                            <a href="/interview/report" class="@(TempData["NAV"] != null && TempData["NAV"].ToString() == "REPORT" ? "selected" : "")">
                                Report
                            </a>
                        </li>
                        <li>
                            <a href="/interview/problem" class="@(TempData["NAV"] != null && TempData["NAV"].ToString() == "PROBLEM" ? "selected" : "")">
                                Solve This Problem
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="leftpad">
                    @RenderBody()
                </div>
            </div>
        </div>
    }

    <div id="loading"></div>

    <script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/Scripts/globalize.js"></script>
    <script type="text/javascript" src="/Scripts/globalize.culture.en-AU.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>

